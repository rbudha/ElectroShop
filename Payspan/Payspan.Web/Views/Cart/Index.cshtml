@{
    ViewBag.Title = "Index";
}

<h2>Cart</h2>
@if (Model.Count == 0)
{
    <span>Cart is empty.</span>
    return;
}

<table>
    <tr>
        <th width="200">Product</th>
        <th  width="100">Price</th>
        <th  width="100">Quantity</th>
        <th  width="150">Total Amount</th>
    </tr>

@foreach (var p in @Model)
{
    <tr>
        <td>@p.Name</td>
        <td>@String.Format("{0:C}",@p.UnitPrice)</td>
        <td align="center">@p.Quantity</td>
        <td align="right">@String.Format("{0:C}",(@p.Quantity*@p.UnitPrice))</td>
    </tr>
}
</table>

<h3>Customer Information</h3>
@{Html.BeginForm("Checkout","Cart");}
    <label>First Name</label> @Html.TextBox("FirstName")<br />
    <label>Last Name</label> @Html.TextBox("LastName")<br />
    <label>Email Address</label> @Html.TextBox("EmailAddress")<br />
    <input type="submit" ID="checkout" value="Checkout" />
@{Html.EndForm();}

