@model Payspan.Web.Models.OrderItem
@{
    ViewBag.Title = "Order Detail";
}

<h2>Order Detail</h2>
@if (Model.Count == 0)
{
    <span>No Orders Found.</span>
    return;
}
<table>
    <tr>
        <th width="200">Product</th>
        <th  width="100">Price</th>
        <th  width="100">Quantity</th>
        <th  width="150">Total Amount</th>
    </tr>

@foreach (var o in @Model)
{
    <tr>
        <td>@o.Product.Name</td>
        <td>@String.Format("{0:C}",@o.UnitPrice)</td>
        <td align="center">@o.Quantity</td>
        <td align="right">@String.Format("{0:C}",(@o.Quantity*@o.UnitPrice))</td>
    </tr>
}
</table>